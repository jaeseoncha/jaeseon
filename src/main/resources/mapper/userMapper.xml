<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.web.mapper.UserMapper">
	<select id="getList" resultType="com.spring.web.vo.UserVO">
		SELECT * FROM user
	</select>

	<insert id="userJoin">
		insert into user values(#{id}, #{email}, #{password},
		#{name}, #{role},
		#{phonenum})
	</insert>

	<insert id="imageEnroll">
		insert into storeImage(store_id,fileName,uploadPath,uuid) values
		(#{store_id},#{fileName},#{uploadPath},#{uuid})
	</insert>

	<select id="getUser" resultType="com.spring.web.vo.UserVO">
		select * from user where
		email=#{email} and password=#{password}
	</select>

	<select id="getUserById" resultType="com.spring.web.vo.UserVO">
		select * from user where
		id=#{id}
	</select>
	<select id="userUpdate" resultType="com.spring.web.vo.UserVO">
		update user set
		email=#{email},
		password=#{password}, name=#{name},
		phonenum=#{phonenum}
		WHERE id=#{id}
	</select>
</mapper>